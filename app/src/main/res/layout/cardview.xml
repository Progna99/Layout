<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Claim 1"
        android:textColor="#FDF9F9"
        android:textSize="24sp" />

    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40sp" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >


            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="104dp"
                android:layout_height="75dp"
                app:srcCompat="@drawable/icon" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="304dp"
                    android:layout_height="35dp"
                    android:layout_weight="1"
                    android:text="Reimbursable Item 1"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="November 17"
                    android:textSize="18sp" />







            </LinearLayout>






        </LinearLayout>







</androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/button1"
        android:layout_width="198dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/card"


        android:layout_marginTop="562dp"
        android:background="#804fb3"
        android:text="Add Reimbursement"></Button>

    <Button
        android:layout_width="198dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/card"


        android:layout_marginLeft="12dp"
        android:layout_marginTop="562dp"
        android:layout_toRightOf="@id/button1"
        android:background="#804fb3"
        android:text="Submit Click"></Button>


</RelativeLayout>